{
  "name": "flash-bridge",
  "version": "1.0.0",
  "description": "Privacy-first cross-chain bridge: BTC → ZEC (shielded) → Solana with Arcium MPC encryption",
  "main": "backend/src/index.js",
  "homepage": "https://flash-bridge.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/flash-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/flash-bridge/issues"
  },
  "keywords": [
    "solana",
    "bridge",
    "cross-chain",
    "zcash",
    "bitcoin",
    "privacy",
    "mpc",
    "arcium",
    "defi",
    "cryptocurrency",
    "blockchain"
  ],
  "author": "FLASH Bridge Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "start-services.bat",
    "setup:all": "node scripts/smart-setup.js",
    "install:all": "cd backend && npm install && cd ../frontend && npm install && cd ../backtest && npm install",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "build:program": "anchor build",
    "test:program": "anchor test",
    "deploy:localnet": "anchor deploy",
    "setup": "./scripts/setup-localnet.sh",
    "backtest": "cd backtest && node backtest.js",
    "demo:poc": "node demo-poc.js",
    "demo:mvp": "node demo-mvp.js",
    "demo:frontend": "node demo-frontend.js",
    "demo:all": "./run-demos.sh",
    "demo:improved": "node scripts/demo-improved-system.js",
    "docker:poc": "docker-compose -f docker-compose-poc.yml up --build",
    "docker:mvp": "docker-compose -f docker-compose-mvp.yml up --build",
    "docker:test": "./test-docker-setup.sh",
    "docker:clean": "docker-compose -f docker-compose-poc.yml down && docker-compose -f docker-compose-mvp.yml down",
    "test": "cd backtest && npm test",
    "demo": "npm run setup:all && npm run start:backend & npm run start:frontend",
    "check": "cd backend && npm run check",
    "docs": "cd docs && npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/yourusername"
  },
  "dependencies": {
    "bs58": "^6.0.0"
  }
}
