{
  "name": "flash-bridge",
  "version": "1.0.0",
  "description": "Privacy-Preserving BTC → SOL Bridge with Arcium MPC",
  "main": "backend/src/index.js",
  "homepage": "https://flash-bridge.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/flash-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/flash-bridge/issues"
  },
  "keywords": [
    "solana",
    "bridge",
    "bitcoin",
    "privacy",
    "mpc",
    "arcium",
    "defi",
    "cryptocurrency",
    "blockchain",
    "cross-chain"
  ],
  "author": "FLASH Bridge Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "setup": "node scripts/smart-setup.js",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "setup:unix": "bash scripts/setup.sh",
    "deploy": "bash scripts/deploy.sh",
    "deploy:windows": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:production": "bash scripts/deploy.sh production",
    "preflight": "cd backend && npm run preflight",
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "start": "docker-compose up -d",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "start:dev": "docker-compose up -d postgres redis && cd backend && npm run dev",
    "build": "docker-compose build",
    "build:frontend": "cd frontend && npm run build",
    "build:program": "anchor build",
    "test": "cd backend && npm test",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:program": "anchor test",
    "logs": "docker-compose logs -f",
    "logs:backend": "docker-compose logs -f backend",
    "stop": "docker-compose down",
    "reset": "docker-compose down -v && docker-compose up -d",
    "health": "curl -s http://localhost:3001/health | node -e \"const d=require('fs').readFileSync(0,'utf8');console.log(JSON.parse(d).status==='healthy'?'✓ Healthy':'✗ Unhealthy')\"",
    "keypair:generate": "solana-keygen new -o keys/relayer-keypair.json --no-bip39-passphrase",
    "keypair:show": "node scripts/show-solana-address.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/your-org"
  },
  "dependencies": {
    "bs58": "^6.0.0"
  }
}
